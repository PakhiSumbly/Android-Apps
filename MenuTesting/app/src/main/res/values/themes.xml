<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MenuTesting" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="iconTint">#000000</item>
        <item name="titleTextColor">#000000</item>
        <item name="android:actionOverflowButtonStyle">@style/Theme.MenuTesting</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ThemeMenuTesting.OverFlow">
        <item name="android:src">@drawable/ic_camera</item>
        <item name="tint">#ffff52</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="MyStyle" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#ff22aa</item>
        <item name="colorPrimaryDark">#ff22aa</item>
    </style>



</resources>